{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "tailwind.config": ["./tailwind.config.js"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "client/.expo/types/**/*.ts",
    "nativewind-env.d.ts",
    "./declarations.d.ts",
    "./global.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
